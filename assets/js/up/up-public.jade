div.container-fluid(ng-controller="UserProfilePublicController as ctrl")
    .page-header
        h2 Personal info
    .col-md-6.col-sm-6.col-xs-12
        .panel.panel-default
            .panel-heading
                h3.panel-title User Profile
            .panel-body
                .up-title
                .up-data {{ctrl.user.name + " " + ctrl.user.surname}}

                .up-title Age
                .up-data 23

                .up-title Birthday
                .up-data May 10

                .up-title Gender
                .up-data {{ctrl.user.gender}}

        .panel.panel-default
            .panel-heading
                h3.panel-title Address
            .panel-body
                .up-title Country
                .up-data {{ctrl.user.country}}

                .up-title City
                .up-data {{ctrl.user.city}}

        .panel.panel-default
            .panel-heading
                h3.panel-title Contacts
            .panel-body
                .up-title Email address
                .up-data {{ctrl.user.email}}

    .col-md-6.col-sm-6.col-xs-12.personal-info
        img.avatar.img-thumbnail(src= "{{ctrl.user.avatar.urlAva}}", alt='avatar')

        .panel.panel-default(ng-controller='PdpController as pdp')
            .panel-heading
                h3.panel-title Position
            .panel-body
                .up-title Position in company
                .up-data {{pdp.userPDP.position.name}} {{pdp.userPDP.direction.name}}

                .up-title Work since
                .up-data May 12 2015
                //.up-data {{ctrl.user.workDate}}
