div.pdp(ng-controller='PdpController as pdp')
    h4 Position
    span.prettyBadge {{pdp.userPDP.position}}
    accordion
        accordion-group(is-open='pdp.status.isCertificatesOpen')
            accordion-heading
              | User certificates 
              i.pull-right.glyphicon(ng-class="{'glyphicon-chevron-down': pdp.status.isCertificatesOpen, 'glyphicon-chevron-right': !pdp.status.isCertificatesOpen}")
            .col-md-3(ng-repeat='achievement in pdp.achievements')
                .clearfix
                    img.img-responsive(ng-src='{{achievement.img}}')
                p {{achievement.name}}
    accordion
        accordion-group(is-open='pdp.status.isAchievementsOpen')
            accordion-heading
              | User achievements 
              i.pull-right.glyphicon(ng-class="{'glyphicon-chevron-down': pdp.status.isAchievementsOpen, 'glyphicon-chevron-right': !pdp.status.isAchievementsOpen}")
            .col-md-3(ng-repeat='achievement in pdp.achievements')
                .clearfix
                    img.img-responsive(ng-src='{{achievement.img}}')
                p {{achievement.name}}
    accordion
        accordion-group(is-open='pdp.status.isStepsOpen')
          accordion-heading
              | Steps needed to reach the next position 
              i.pull-right.glyphicon(ng-class="{'glyphicon-chevron-down': pdp.status.isStepsOpen, 'glyphicon-chevron-right': !pdp.status.isStepsOpen}")
          h4 Technologies
          div(ng-repeat='item in pdp.items')
              label
                  span {{item}}
                  input.checkbox.style-2.pull-right(type='checkbox')
          h4 Certifications
          div(ng-repeat='item in pdp.items')
              label
                  span {{item}}
                  input.checkbox.style-2.pull-right(type='checkbox')
          h4 Tasks
          div(ng-repeat='item in pdp.userPDP.userTasks')
              label
                  span {{item.taskName}}
                  span {{item.taskDate}}
                  input.style-2.pull-right(type='checkbox' ng-model='item.completed')
          h4 Tests
          div(ng-repeat='item in pdp.items')
              label
                  span {{item}}
                  input.checkbox.style-2.pull-right(type='checkbox')

